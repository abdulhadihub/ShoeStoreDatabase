        <TextBox x:Name="desc" HorizontalAlignment="Left" Margin="348,262,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="30" FontFamily="Microsoft New Tai Lue" FontSize="15"/>
        <Button x:Name="btnadd" Content="ADD" HorizontalAlignment="Left" Margin="50,366,0,0" VerticalAlignment="Top" Width="108" Click="btnadd_Click" Height="31"/>
