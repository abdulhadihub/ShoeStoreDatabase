        <Button x:Name="load" Content="LOAD" HorizontalAlignment="Left" Margin="444,366,0,0" VerticalAlignment="Top" Height="31" Click="load_Click" Width="124"/>
        <Button x:Name="clear" Content="CLEAR" HorizontalAlignment="Left" Margin="307,366,0,0" VerticalAlignment="Top" Width="108" Click="clear_Click" Height="31"/>
        <TextBox x:Name="empid" HorizontalAlignment="Left" Margin="175,205,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="30" FontFamily="Microsoft New Tai Lue" FontSize="15"/>

    </Grid>
