<Page x:Class="WpfApp2.revenuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="revenuePage">

    <Grid>
        <WrapPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="5,5">
            <Label Grid.Row="1" Grid.Column="0" Margin="5,0" HorizontalAlignment="Left" FontSize="13" FontWeight="Bold" Height="26"  VerticalAlignment="Center" Width="98">Year:</Label>
            <TextBox Grid.Row="1" Grid.Column="0" Margin="5,0" x:Name="yearTB" HorizontalAlignment="Center" Height="26"  VerticalAlignment="Center" Width="90"/>
            <Button Grid.Row="1" Grid.Column="0" Margin="5,0" x:Name="searchYear" Click="searchYear_Click" Content="Search" HorizontalAlignment="Left" Height="26"  VerticalAlignment="Center" Width="64" />
        </WrapPanel>
        <DataGrid Grid.Row="1" Grid.Column="0" Margin="-6,78,0,10" x:Name="dataGridRevenue" HorizontalAlignment="center"  Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

    </Grid>
</Page>
