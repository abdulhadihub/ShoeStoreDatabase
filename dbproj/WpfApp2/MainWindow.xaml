<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" Margin="0,5">
            <Button x:Name="empScreen" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="empScreen_Click" Content="Employee Screen" Height="30" Margin="5,5"  Width="150"/>
            <Button x:Name="manScreen"  HorizontalAlignment="Left" VerticalAlignment="Top"  Click="manScreen_Click" Content="Manager Screen"  Height="30" Margin="5,5"  Width="150"/>
        </WrapPanel>
        
    </Grid>
</Window>
