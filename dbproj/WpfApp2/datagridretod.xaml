<Window x:Class="WpfApp2.datagridretod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="datagridretod" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="datagridret" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,111,0,0"/>
        <Button x:Name="show" Click="show_Click" Content="SHOW All" HorizontalAlignment="Left" Height="37" Margin="48,39,0,0" VerticalAlignment="Top" Width="113" FontSize="13"/>

    </Grid>
</Window>
